{
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",  // Use Babel parser for JSX
    "parserOptions": {
      "ecmaVersion": 2018,      // Use ES2018 (ES8) features
      "sourceType": "module"   // Allows the use of import/export
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/prop-types": "off"  // Optional: Disable prop-types rule if you don't use it
    }
  }